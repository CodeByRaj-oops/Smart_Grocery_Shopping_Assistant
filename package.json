{
  "name": "smart-grocery-shopping-assistant",
  "version": "1.0.0",
  "description": "A comprehensive grocery management platform",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-server": "npm install",
    "install-client": "npm install --prefix frontend",
    "install": "npm run install-server && npm run install-client",
    "build": "npm run build --prefix frontend"
  },
  "keywords": [
    "grocery",
    "shopping",
    "assistant",
    "inventory",
    "recipes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}